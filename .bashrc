__git_complete_local_branches() {
    local cur="${COMP_WORDS[COMP_CWORD]}"
    COMPREPLY=( $(compgen -W "$(git for-each-ref --format="%(refname:short)" refs/heads/)" -- "$cur") )
}
complete -F __git_complete_local_branches git checkout

